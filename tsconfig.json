{
  "compilerOptions": {
    "target": "ES2017", // Modern target for better compatibility
    "lib": ["dom", "dom.iterable", "esnext"], // Include necessary libraries
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip library checks for faster builds
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Do not emit JavaScript files (Next.js handles this)
    "esModuleInterop": true, // Enable ES module interop
    "module": "esnext", // Use ES modules
    "moduleResolution": "bundler", // Use bundler resolution (recommended for Next.js)
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Ensure safe transpilation
    "jsx": "preserve", // Preserve JSX syntax
    "incremental": true, // Enable incremental compilation
    "baseUrl": ".", // Base directory for path resolution
    "paths": {
      "@/*": ["./src/*"] // Path aliases for imports
    },
    "plugins": [
      {
        "name": "next" // Next.js TypeScript plugin
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Next.js TypeScript declarations
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TypeScript JSX files
    ".next/types/**/*.ts" // Include Next.js generated types
  ],
  "exclude": [
    "node_modules" // Exclude node_modules
  ]
}
